<!doctype html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/navbar %>
    <div class="container">
      <div class="row">
        <div class="col s12">
          <span class="poll-title center-align"><h2>Poll Title: <%= adminPoll.title %></h2></span>
          <h4 class="center-align">Poll Topic: <%= adminPoll.question %></h4>
          <div class='response-options'>
            <table class="bordered centered highight">
              <thead>
                <tr>
                  <th data-field='option'>Option</th>
                  <th data-field='votes'>Votes</th>
                </tr>
              </thead>
              <tbody>
                <% adminPoll.responses.forEach(function(response) { %>
                  <tr class='<%= response %>-count'>
                    <td><%= response %></td>
                    <td><%= adminPoll.responseVotes[response] %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div><br>
          <div class="links center-align">
            <h5>Links:</h5>
            <p id='admin-link'>Use this link to access and manage your poll options: <a href='<%= adminPoll.adminUrl %>'>Poll Admin Page</a></p>
            <p id='vote-link'>Share this link to let others vote: <a href='<%= adminPoll.voterUrl %>'>Poll Voting Page</a></p>
          </div>
          <div class='status-<%= adminPoll.open %> center-align'>
            <button id="close-poll" class="btn waves-effect waves-light teal darken-2">Close this Poll</button>
          </div>
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/jquery.js"></script>
    <script src="/client.js"></script>
    <% include ./partials/body-materialize %>
  </body>
</html>
